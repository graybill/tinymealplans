#schedule.accordion.tab-content
  #thisWeek.tab-pane.active
    %h2= "This week"
    - @meals.each do |meal|
      - opened = default_accordion_group(meal)
      = render 'accordion', :meal => meal, :opened => opened
  #nextWeek.tab-pane
    %h2= "Next week"
    - @next_weeks_meals.each do |meal|
      - opened = default_accordion_group(meal)
      = render 'accordion', :meal => meal, :opened => opened